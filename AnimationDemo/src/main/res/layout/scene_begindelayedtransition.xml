<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scene_root"
android:layout_gravity="center_horizontal"
android:layout_centerInParent="true"
android:layout_width="match_parent"
android:gravity="center_horizontal"
android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/xcuteboy"
    android:src="@mipmap/cuteboy"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp" />
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/xcutegirl"
    android:layout_toRightOf="@id/xcuteboy"
    android:src="@mipmap/cutegirl"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp" />
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/hxy"
    android:src="@mipmap/hxy"
    android:layout_below="@id/xcuteboy"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp" />
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/lly"
    android:layout_toRightOf="@id/hxy"
    android:layout_below="@id/xcuteboy"
    android:src="@mipmap/lly"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp" />
</RelativeLayout>