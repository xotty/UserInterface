<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <Button
        android:id="@+id/explode_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Explode(code)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/explode_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Explode(xml)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/slide_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Slide(code)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>


    <Button
        android:id="@+id/slide_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Slide(xml)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/fade_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Fade(code)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/fade_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Fade(xml)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/share_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  SharedElement(Activity)"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:src="@drawable/cat"
            android:layout_margin="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:transitionName="cat"
            android:elevation="5dp"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="xottys@163.com"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:elevation="5dp"
            android:transitionName="title_name"
            android:textColor="#353535"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/sample_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MaterialAnimations.Icon.Small"
            android:src="@drawable/circle_24dp"
            android:transitionName="@string/square_blue_name"/>

        <TextView
            android:id="@+id/share_fragment"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SharedElement(Fragment)"
            android:transitionName="title"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"/>

    </LinearLayout>
    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Exit"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:textSize="20sp"
        />
</LinearLayout>