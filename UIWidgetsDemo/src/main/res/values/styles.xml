<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>
    </style>

    <style name="AppBaseTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigation_BarColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:colorBackground">@color/colorBKG</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppDayNightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigation_BarColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:colorBackground">@color/colorBKG</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppBaseTheme.NoActionBar">
        <item name="actionBarSize">80dip</item>
    </style>
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="CustomRadioButtonTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_selector</item>
    </style>

    <style name="AutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@color/green</item>
        <item name="android:dropDownVerticalOffset">-50dip</item>
        <item name="android:dropDownHorizontalOffset">100dip</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_style</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:actionModeStyle">@style/Widget.AppCompat.ActionMode</item>-->
        <!--<item name="android:actionModeBackground">@drawable/abc_cab_background_top_material</item>-->
        <!--<item name="android:actionModeSplitBackground">?attr/colorPrimaryDark</item>-->
        <!--<item name="android:actionModeCloseDrawable"></item>-->
        <!--<item name="android:actionModeCloseButtonStyle">@style/Widget.AppCompat.ActionButton.CloseMode</item>-->
        <!--<item name="android:actionModeCutDrawable">@drawable/abc_ic_menu_cut_mtrl_alpha</item>-->
        <!--<item name="android:actionModeCopyDrawable">@drawable/abc_ic_menu_copy_mtrl_am_alpha</item>-->
        <!--<item name="android:actionModePasteDrawable">@drawable/abc_ic_menu_paste_mtrl_am_alpha</item>-->
        <!--<item name="android:actionModeSelectAllDrawable">@drawable/abc_ic_menu_selectall_mtrl_alpha</item>-->
        <!--<item name="android:actionModeShareDrawable">@drawable/abc_ic_menu_share_mtrl_alpha</item>-->
    </style>

    <!-- ToolBarActivity Theme -->
    <style name="MyToolBarTheme" parent="ToolBarTheme.Base" />

    <style name="ToolBarTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/material_blue_grey_800</item>
        <item name="colorPrimaryDark">@color/accent_material_light</item>
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
        <!-- 添加这一句， 即可改变overflow图标的颜色-->
        <item name="android:textColorSecondary">#ea2222</item>
    </style>

    <!--可以设置menu中的各项属性-->
    <style name="Theme.Popup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:colorBackground">#749b93</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <style name="Theme.ToolBar.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#22d6ea</item>
    </style>

    <!--MaterialDesign Demo-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DialogFullscreen" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="DialogFullscreenWithTitle" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.NoActionBar_StatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
