<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.xottys.userinterface.dialogdemo.ProgressDialogFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不带标题的环形进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button2"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="带标题的环形进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button3"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="带按钮的环形进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button4"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="不显示进度的水平进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button5"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="显示进度的水平进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button6"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="带按钮的水平进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button7"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="自定义样式环形进度条Dialog"
                android:textSize="20sp"/>
            <Button android:id="@+id/button8"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="自定义水平进度条Dialog"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
